<div class="container">
	<div class="modal-body row">
		<div class="col-md-8">
			<p class="picture">
				<%= image_tag @restaurant.image.masthead.url if @restaurant.image%>
			</p>	
		</div>
		<div class="col-md-4 desc_cont">
			<p>
				<span class="accent">Name</span>: <%= @restaurant.name %><br>
			</p>
			<p>
				<span class="accent">Description</span>: <%= @restaurant.description %><br>
			</p>
			<p>
				<span class="accent">Full Address</span>:<%= @restaurant.full_address %><br>
			</p>
			<p>
				<span class="accent">Menu</span>:<%= @restaurant.menu %><br>
			</p>
			
			<% if @restaurant.owner %>
			  <p><%= @restaurant.owner.email %></p>
			  <p><%= @restaurant.owner.name %></p>
			<% end %>
		</div>
	</div>
	<% if current_owner == @restaurant.owner %>
		<%= link_to "Edit", edit_restaurant_path(@restaurant) %>
		<%= link_to "Destroy", restaurant_path(@restaurant), method: :delete, data: {confirm: "Are you sure you want to delete this restaurant?" } %>
	<% end %>


	<%= link_to "Back", restaurants_path, class: "btn btn-primary btn-lg" %>
	<div class="res_cont">
		<h2>reservation</h2>
		<% @restaurant.reservations.each do |reservation| %>
		  <p>
		    <strong>Email:</strong>
		    <%= reservation.email %>
		  </p> 
		  <p>
		    <strong>Reservation Note:</strong>
		    <%= reservation.message %>
		  </p>
		<% end %>
	</div><!--reservation container -->


	<%= render "reservations/form" %>	
</div>
