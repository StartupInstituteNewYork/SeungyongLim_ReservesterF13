<div class="modal-body row">
	<div class="col-md-8"><%= image_tag @restaurant.image.masthead.url if @restaurant.image%></div>
	<div class="col-md-4">
		name: <%= @restaurant.name %><br>
		Description: <%= @restaurant.description %><br>
		full-address:<%= @restaurant.full_address %><br>
		Menu in PDf:<%= @restaurant.menu %><br>
		<% if @restaurant.owner %>
		  <p><%= @restaurant.owner.email %></p>
		  <p><%= @restaurant.owner.name %></p>
		<% end %>
	</div>
</div>

	
<%= link_to "Edit", edit_restaurant_path(@restaurant) %>
<%= link_to "Destroy", restaurant_path(@restaurant), method: :delete, data: {confirm: "Are you sure you want to delete this restaurant?" } %>

