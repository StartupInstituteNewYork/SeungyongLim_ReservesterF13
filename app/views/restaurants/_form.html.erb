
<%= form_for @restaurant, url: restaurants_path, html: {:multipart => true} do |f| %>

<p>
<%= f.label :name %><br>
<%= f.text_field :name %>
</p>

<p>
<%= f.label :description %><br>
<%= f.text_area :description %>
</p>

<p>
<%= f.label :full_address %><br>
<%= f.text_area :full_address %>
</p>

<p>
<%= f.label :phone_number %><br>
<%= f.text_field :phone_number %>
</p>

<p>
    <%= f.label :image %>
    <%= image_tag(@restaurant.image_url) if @restaurant.image? %>
    <%= f.file_field :image %>
    <%= f.hidden_field :image_cache %>
</p>
<p>
<%= f.submit %>
</p>
<% end %>