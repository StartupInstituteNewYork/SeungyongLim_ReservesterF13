
<%= form_for @restaurant, data: {validate: 'parsley'} do |f| %>
<%= f.label :name %><br>
<%= f.text_field :name, placeholder: 'name'  %>
<%= f.label :description %><br>
<%= f.text_area :description, placeholder: 'description' %>

<%= f.label :full_address %><br>
<%= f.text_area :full_address, placeholder: 'full address' %>
<%= f.label :phone_number %><br>
<%= f.text_field :phone_number, placeholder: 'phone number', :'data-type' => 'digits'  %>
<%= image_tag(@restaurant.image_url) if @restaurant.image? %>
<%= f.file_field :image %>
<%= f.hidden_field :image_cache %>
<%= f.submit %>
<% end %>
