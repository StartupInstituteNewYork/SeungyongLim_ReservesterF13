	
<div class="container">
	<section>
		<%= render "top" %>
	</section>	
	
	<section class="main">
		<% @restaurants.each do |restaurant| %>
	
		<div class="picture">
			<%= link_to image_tag(restaurant.image.thumbnail.url, class: "smaller"),restaurant_path(restaurant) %>
